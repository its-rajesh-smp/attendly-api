  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/config/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "start:prod": "NODE_ENV=production pm2 start dist/index.js --name attendly-api",
    "restart:prod": "NODE_ENV=production pm2 restart attendly-api || pm2 start dist/index.js --name attendly-api",
    "prisma:migrate": "dotenv -e .env.dev -- npx prisma migrate dev",
    "prisma:migrate:prod": "dotenv -e .env.prod -- npx prisma migrate dev",
    "prisma:generate": "dotenv -e env.dev -- npx prisma generate",
    "prisma:generate:prod": "dotenv -e env.prod -- npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.15.12",
    "tsconfig-paths": "^4.2.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
